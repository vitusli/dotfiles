  -- Treesitter
  {
    "nvim-treesitter/nvim-treesitter",
    branch = "main",
    lazy = false,
    build = function()
      -- Only run TSUpdate if the new API exists
      if require("nvim-treesitter").install then
        vim.cmd("TSUpdate")
      end
    end,
    config = function()
      local ts = require("nvim-treesitter")
      local parsers = { "python", "lua", "vim", "vimdoc" }

      -- New API (main branch, requires nvim 0.11+)
      if ts.install then
        ts.install(parsers)
        vim.api.nvim_create_autocmd("FileType", {
          pattern = { "python", "lua", "vim" },
          callback = function() vim.treesitter.start() end,
