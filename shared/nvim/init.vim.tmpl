          ["<CR>"] = cmp.mapping.confirm({ select = true }),
        }),
        sources = {
          { name = "buffer" },
          { name = "path" },
        },
      })
      -- Cmdline : completion
      cmp.setup.cmdline(":", {
        mapping = cmp.mapping.preset.cmdline(),
        sources = {
          { name = "path" },
          { name = "cmdline" },
        },
      })
      -- Cmdline / completion
      cmp.setup.cmdline("/", {
        mapping = cmp.mapping.preset.cmdline(),
        sources = {
          { name = "buffer" },
        },
      })
    end,
  },
