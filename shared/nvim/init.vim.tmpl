      {
        "<Space>",
        function()
          local builtin = require("telescope.builtin")
          -- Find project root (look for common markers)
          -- .moxide.toml first for Obsidian vaults
          local root_markers = { ".moxide.toml", ".git", "pyproject.toml", "Cargo.toml", "package.json", "Makefile" }
          local cwd = vim.fn.expand("%:p:h")  -- Start from current file's directory
          local root = nil

          for _, marker in ipairs(root_markers) do
            local found = vim.fn.findfile(marker, cwd .. ";")
            if found == "" then
              found = vim.fn.finddir(marker, cwd .. ";")
            end
            if found ~= "" then
              root = vim.fn.fnamemodify(found, ":p:h")
              if marker == ".git" then
                root = vim.fn.fnamemodify(root, ":h")
              end
              break
            end
          end

          if root then
            -- In project: search everything (exclude venv)
            builtin.find_files({
              cwd = root,
              find_command = { "fd", "--type", "f", "--exclude", ".venv", "--exclude", "venv", "--exclude", ".obsidian" },
            })
          else
            -- No project: search home with max-depth 2
            builtin.find_files({
              cwd = vim.env.HOME,
              find_command = { "fd", "--type", "f", "--max-depth", "2" },
            })
          end
        end,
        desc = "Find files (project or home)",
