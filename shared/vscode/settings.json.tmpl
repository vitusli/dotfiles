{
    // Editor
    "editor.accessibilitySupport": "off",

    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // Extensions
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "extensions.ignoreRecommendations": true,

    // Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 0,

    // Git
    "git.openRepositoryInParentFolders": "always",

    // GitHub Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false
    },

    // Neovim
{{- if eq .chezmoi.os "darwin" }}
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "{{ .chezmoi.homeDir }}/.config/nvim/init.vim",
{{- else if eq .chezmoi.os "linux" }}
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "{{ .chezmoi.homeDir }}/.config/nvim/init.vim",
{{- else if eq .chezmoi.os "windows" }}
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
    "vscode-neovim.neovimInitVimPaths.win32": "{{ .chezmoi.homeDir }}/AppData/Local/nvim/init.vim",
{{- end }}
    "vscode-neovim.useCtrlKeysForNormalMode": true,
    "vscode-neovim.useCtrlKeysForInsertMode": true,
    "vscode-neovim.useCtrlKeysForVisualMode": true,

    // Security
    "security.workspace.trust.untrustedFiles": "open",

    // Settings Sync
    "settingsSync.keybindingsPerPlatform": false,
    "settingsSync.ignoredExtensions": [],
    "settingsSync.ignoredSettings": [],

    // Terminal
{{- if eq .chezmoi.os "windows" }}
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "path": "pwsh.exe",
            "icon": "terminal-powershell",
            "args": []
        }
    },
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.kill",
        "workbench.action.terminal.killActiveTab",
        "workbench.action.chat.openagent"
    ],
{{- end }}
    "terminal.integrated.suggest.enabled": false,

    // VS Code Custom CSS
    "vscode_custom_css.imports": [
{{- if eq .chezmoi.os "darwin" }}
        "file://{{ .chezmoi.homeDir }}/Library/Application Support/Code/User/custom-vscode.css"
{{- else if eq .chezmoi.os "linux" }}
        "file://{{ .chezmoi.homeDir }}/.config/Code/User/custom-vscode.css"
{{- else if eq .chezmoi.os "windows" }}
        "file:///{{ .chezmoi.homeDir }}/AppData/Roaming/Code/User/custom-vscode.css"
{{- end }}
    ],
    "vscode_custom_css.policy": true,

    // Window
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",

    // Workbench
    "chat.commandCenter.enabled": false,
    "workbench.colorTheme": "cursor midnight theme",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false
}