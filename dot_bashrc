# Vim-Mode Keybindings
set -o vi

# Cursor: Linie im Insert Mode, Block im Normal Mode
# Initialer Cursor als Beam
echo -ne "\e[6 q"

# Aliases (entsprechen den PowerShell Abbreviations)
alias p='uv run python'
alias ov='"A:/isaac-sim/isaac-sim.bat"'
alias l='lazygit'
alias rl='source ~/.bashrc'

# Optional: Bessere History
HISTSIZE=10000
HISTFILESIZE=20000
HISTCONTROL=ignoreboth:erasedups

# Minimal prompt: directory $
PS1='\W \$ '
