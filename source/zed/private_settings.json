{
  "file_types": {
    "Python": ["**/user-abbreviations.tmpl"],
    "JSON": ["**/keymap.json.tmpl", "**/settings.json.tmpl"],
    "Lua": ["**/wezterm.lua.tmpl"]
  },
  "tab_bar": {
    "show": false
  },
  "title_bar": {
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_picture": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5"
    },
    "model_parameters": []
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 0
    }
  },
  "session": {
    "trust_all_worktrees": true
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  }
}
